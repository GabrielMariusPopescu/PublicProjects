@model IEnumerable<Company>

@{
    ViewBag.Title = "Companies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-primary">@ViewBag.Title</h2>
    </div>
    <div class="col-6 text-end">
        <a asp-action="Upsert" class="btn btn-primary">
            <i class="fas fa-plus"></i>&nbsp; Create New Company
        </a>
    </div>
</div>

<br />
<div class="p-4 border rounded">
    <table class="table table-striped table-bordered w-100">
        <thead class="table-dark">
            <tr class="table-primary">
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.StreetAddress)</th>
                <th>@Html.DisplayNameFor(model => model.City)</th>
                <th>@Html.DisplayNameFor(model => model.State)</th>
                <th>@Html.DisplayNameFor(model => model.PhoneNumber)</th>
                <th>@Html.DisplayNameFor(model => model.IsAuthorizedCompany)</th>
                <th></th>
            </tr>
        </thead>
        <tbody class="table-info">
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StreetAddress)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.State)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.CheckBoxFor(modelItem => item.IsAuthorizedCompany)
                    </td>
                    <td>
                        <a asp-action="Upsert" asp-route-id="@item.Id" class="btn btn-success">
                            <i class="fas fa-edit"></i>
                        </a>&nbsp;
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>